<view class="container">

  <view class="userinfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto">
    <text bindtap="bindViewTap" class="user-motto">{{motto}}</text>
  </view>

</view>

<view class="weui-footer">
  <view class="weui-footer__links" bindtap="onGetOpenid">
    <navigator url="../index/index" class="weui-footer__link">{{openid}}</navigator>
  </view>
  <view class="weui-footer__text">微信：15871352105</view>
</view>